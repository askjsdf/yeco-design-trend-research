{
  "version": 2,
  "name": "yeco",
  "public": true,
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/pages/home/index.html"
    },
    {
      "src": "^/home/?$",
      "dest": "/pages/home/index.html"
    },
    {
      "src": "^/trends/?$",
      "dest": "/pages/trends/index.html"
    },
    {
      "src": "^/reports/?$",
      "dest": "/pages/reports/index.html"
    },
    {
      "src": "^/reports/2024-10-middleeast/?$",
      "dest": "/pages/reports/2024-10-middleeast/index.html"
    },
    {
      "src": "^/reports/(.*)$",
      "dest": "/pages/reports/$1"
    },
    {
      "src": "^/pages/(.*)$",
      "dest": "/pages/$1"
    },
    {
      "src": "^/assets/(.*)$",
      "dest": "/assets/$1"
    },
    {
      "src": "^/shared/(.*)$",
      "dest": "/shared/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/shared/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/pages/(.*)\\.(jpg|jpeg|png|gif|webp|svg|ico)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/pages/(.*)\\.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/pages/(.*)\\.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/pages/home/",
      "permanent": true
    },
    {
      "source": "/home.html",
      "destination": "/pages/home/",
      "permanent": true
    },
    {
      "source": "/trends.html",
      "destination": "/pages/trends/",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    {
      "source": "/favicon.ico",
      "destination": "/assets/images/favicon.ico"
    }
  ]
}
